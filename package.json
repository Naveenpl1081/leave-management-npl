{
  "name": "leave-management-npl",
  "version": "1.0.0",
  "description": "Leave Management System with AWS SAM",
  "scripts": {
    "build": "npm run build:lambdas",
    "build:lambdas": "esbuild src/lambdas/*/index.ts --bundle --platform=node --target=node18 --outdir=.aws-sam/build --outbase=src/lambdas --external:@aws-sdk/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "sam build && sam deploy",
    "local": "sam local start-api",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-ses": "^3.700.0",
    "@aws-sdk/client-sfn": "^3.962.0",
    "@aws-sdk/client-ssm": "^3.964.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.6",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
